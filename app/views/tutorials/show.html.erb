<% title "Tutorial" %>

<p>
  <strong>Created By:</strong>
  <%= @tutorial.created_by %>
</p>
<p>
  <strong>Title:</strong>
  <%= @tutorial.title %>
</p>
<p>
  <strong>Article:</strong>
  <%= @tutorial.article %>
</p>
<p class="">
				<%=link_to "Up", "upvote/"+@tutorial.id.to_s %>
				<%=@tutorial.upvotes - @tutorial.downvotes%>
				<%=link_to "Down", "downvote/"+@tutorial.id.to_s %>
</p>

<p>
  <%= link_to "Edit", edit_tutorial_path(@tutorial) %> |
  <%= link_to "Destroy", @tutorial, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", tutorials_path %>
</p>
