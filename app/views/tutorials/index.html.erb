<% title "Tutorials" %>

<table>
  <tr>
    <th>Created By</th>
    <th>Title</th>
    <th>Article</th>
    <th>Upvotes</th>
    <th>Downvotes</th>
  </tr>
  <% for tutorial in @tutorials %>
    <tr>
      <td><%= tutorial.created_by %></td>
      <td><%= tutorial.title %></td>
      <td><%= tutorial.article %></td>
      <td><%= tutorial.upvotes %></td>
      <td><%= tutorial.downvotes %></td>
      <td><%= link_to "Show", tutorial %></td>
      <td><%= link_to "Edit", edit_tutorial_path(tutorial) %></td>
      <td><%= link_to "Destroy", tutorial, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Tutorial", new_tutorial_path(tutorial) %></p>
