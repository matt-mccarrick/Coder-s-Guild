<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Coder's Guild" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= stylesheet_link_tag "grid"%>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="nav">
      <ul>
        <li>
          <%=link_to "Tutorials" , tutorials_path%>
        </li>
      </ul>
    </div>
    <div id="container" class="container-12">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
    
  </body>
</html>
