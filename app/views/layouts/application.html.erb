<!DOCTYPE html>
<html>
	<head>
		<title><%= content_for?(:title) ? yield(:title) : "Coder's Guild" %></title>
		<%= stylesheet_link_tag "application" %>
		<%= stylesheet_link_tag "grid"%>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
		<%= yield(:head) %>
	</head>
	<body>
		<div id="body" class="container-12">
			<div id="header" class="grid-8 push-2 clearfix">
				<h1>The Coder's Guild;</h1>
			</div>
			<div id="nav" class="grid-2">
				<ul>
					<li>
						
						<%=link_to "Home", :controller => "home"%>
                    </li>
					<li>
						<%=link_to "Tutorials" , tutorials_path%>
					</li>
					<li>
						<%=link_to "Exercises",exercises_path%>
					</li>
				</ul>
			</div>
			<div id="content" class="grid-8">
				<% flash.each do |name, msg| %>
				<%= content_tag :div, msg, :id => "flash_#{name}" %>
				<% end %>
				<%= content_tag :h1, yield(:title) if show_title? %>
				<%= yield %>
			</div>
            <div id="footer">
            </div>
	    </div>
	</body>
</html>
